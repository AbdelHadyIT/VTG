@model IEnumerable<VTG.Models.TourPlan>
@{
    ViewBag.Title = "Plans";
    Layout = "~/Views/Shared/_VoyageLayout.cshtml";
}
<div class="criuses">
    <div class="criuses-head">
        <div class="wrap">
            <h3>Plans</h3>
        </div>
        <!---End-destinatiuons---->
        <div class="find-place dfind-place">
            <div class="wrap">
                <div class="p-h">
                    <span>FIND YOUR</span>
                    <label>PLANS</label>
                </div>
                <!---strat-date-piker---->
                
                <!---/End-date-piker---->
                <div class="p-ww">
                    @using (Html.BeginForm("Plans", "Home", FormMethod.Get))
                    {                      
                        <input id="searchText" name="searchText" class="dest" type="text" value="Search" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}">
                        <input type="submit" value="Search" />
                    }
                </div>
                <div class="clear"> </div>
            </div>
        </div>
    </div>
    <!----//End-find-place---->
    <!---start-criuse-grids----->
    <div class="criuse-main">
        <div class="wrap">
            <div class="criuse-head1">
                <h3>Plans</h3>
            </div>
            <div class="criuse-grid-load">
                @Html.ActionLink("Add New Plan", "CreateTourPlan", "Home", null, new { @class = "", @style = "" })
            </div>
            <div class="criuse-grids">
                @foreach (var tourPlan in Model)
                {
                    <div class="criuse-grid">
                        <div class="criuse-grid-head">
                            <div class="criuse-img">
                                <div class="criuse-pic">
                                    <img src="@Url.Content(tourPlan.PlanImage)" title="criuse-name" />
                                </div>
                                <div class="criuse-pic-info">
                                    <div class="criuse-pic-info-top">
                                        <div class="criuse-pic-info-top-place-name">
                                            <h2><label>Syria</label><span>@tourPlan.Name</span></h2>
                                        </div>
                                    </div>
                                    <div class="criuse-pic-info-price">
                                        <p><span>Balance</span> <h4>@tourPlan.Balance $</h4></p>
                                    </div>
                                </div>
                            </div>
                            <div class="criuse-info">
                                <div class="criuse-info-left">
                                    <ul>
                                        <li><a class="c-hotel" href="#"><span> </span>from @tourPlan.Country to syria </a></li>
                                        <li><a class="c-air" href="#"><span> </span> Flight Duration : @tourPlan.FlightDuration day</a></li>
                                        @*<li><a class="c-fast" href="#"><span> </span> Complimentry beark fast</a></li>*@
                                        <li>@Html.ActionLink("Organize","OrganizePlan", new { tourPlanId = tourPlan.Id })</li>
                                        <li>@Html.ActionLink("Edit","EditTourPlan", new { tourPlanId = tourPlan.Id })</li>
                                        <li>@Html.ActionLink("Delete","DeleteTourPlan", new { tourPlanId=tourPlan.Id})</li>

                                        <div class="clear"> </div>
                                    </ul>
                                </div>
                                <div class="clear"> </div>
                            </div>
                        </div>                       
                    </div>
                }
                
            </div>
        </div>
    </div>
    <!---//End-criuse-grids----->
</div>