@model IEnumerable<VTG.Models.TouristRegion>
@{
    ViewBag.Title = "destinations";
    Layout = "~/Views/Shared/_VoyageLayout.cshtml";
    int i = 1;
}

<div class="destinations">
    <div class="destination-head">
        <div class="wrap">
            <h3>Destinations</h3>
        </div>
        <!---End-destinatiuons---->
        <div class="find-place dfind-place">
            <div class="wrap">
                <div class="p-h">
                    <span>FIND</span>
                    <label>PLACES</label>
                </div>
                <!---strat-date-piker---->
                
                <!---/End-date-piker---->
                <div class="p-ww">
                    @using (Html.BeginForm("Index","Home",FormMethod.Get)) {
                        <input id="searchText" name="searchText" class="dest" type="text" value="Search" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}">
                        <input type="submit" value="Search" />
                    }
                </div>
                <div class="clear"> </div>
            </div>
        </div>
        <!----//End-find-place---->
    </div>
    <div class="destination-places">
        <div class="wrap">
            <div class="destination-places-head">
                <h3>Best Destinations</h3>
            </div>
            <div class="destination-places-grids">

                @foreach (var item in Model)
                {
                    <div class="destination-places-grid@((i % 3) == 0 ? " last-d-grid" : "")" onclick="location.href='#';">
                        <div class="dest-place-pic main_box user_style4" data-hipop="two-horizontal">
                            <img src="@Url.Content(item.RegionImage)" title="place-name" />
                            <a href="#" class="popup"> </a>
                            <a href="#" class="popup2"> </a>
                        </div>
                        <div class="dest-place-opt">
                            <ul class="dest-place-opt-fea">
                                <li><a class="hot" href="#"><span> </span> @item.Type</a></li>
                                <li><a class="plain" href="#"><span> </span> @item.GeoType</a></li>
                                <li><a class="Breakfast" href="#"><span> </span>@item.Address </a></li>
                                <div class="clear"> </div>
                            </ul>
                            <ul class="dest-place-opt-cast">
                                <li><a class="d-place" href="#">@item.Name</a></li>
                                <li><a class="d-price" href="#">Starting Form @item.ReservationPrice$</a></li>
                                <div class="clear"> </div>
                            </ul>
                        </div>
                    </div>
                    i = i + 1;
                }
                <div class="clear"> </div>
            </div>
        </div>

    </div>
    <!---start-destinations-pagenation---->
    <!---//End-destinations-pagenation---->
    <!---loading-more-script--->
    <!---//loading-more-script--->
</div>