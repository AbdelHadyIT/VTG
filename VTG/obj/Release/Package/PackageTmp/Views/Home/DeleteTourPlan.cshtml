@model VTG.Models.TourPlan

@{
    ViewBag.Title = "DeleteTourPlan";
    Layout = "~/Views/Shared/_VoyageLayout.cshtml";
}
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
<div class="container body-content">
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>TourPlan</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Balance)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Balance)
            </dd>

            @*<dt>
                    @Html.DisplayNameFor(model => model.GeoType)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.GeoType)
                </dd>*@

            <dt>
                @Html.DisplayNameFor(model => model.FlightDuration)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FlightDuration)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PlanImage)
            </dt>

            <dd>
                @if (Model.PlanImage != null)
                {
                    <img src="@Url.Content(Model.PlanImage)" class="img-fluid" />
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Country)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Country)
            </dd>

        </dl>

        @using (Html.BeginForm("DeleteTourPlanConfirmed", "Home",FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <input type="text" value="@Model.Id" id="tourPlanId" name="tourPlanId" style="display: none" />
            <div class="form-actions no-color" style="margin-bottom: 30px">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to Plans", "Plans")
            </div>
        }
    </div>
</div>