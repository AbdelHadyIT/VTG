@model IEnumerable<VTG.Models.Landmark>

@{ 
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/adminl_ayout.cshtml";
}

<div class="container body-content">
    <h2>Index</h2>
    <p>
        @Html.ActionLink("Back to Tourist Regions" ,"Index","TouristRegions",null,null) |
        @Html.ActionLink("Create New", "Create", new { regionId = ViewBag.RegionId }) 

    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TouristRegion.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TouristRegion.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id , regionId = item.RegionId}) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id , regionId = item.RegionId}) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id , regionId = item.RegionId }) |
                    @Html.ActionLink("Images", "Index", "Images", new { landmarkId = item.Id , regionId = item.RegionId },null)
                </td>
            </tr>
        }

    </table>
</div>